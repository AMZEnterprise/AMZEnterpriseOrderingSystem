@model AMZEnterpriseOrderingSystem.Models.OrderDetailsViewModel.OrderListViewModel
@{
    ViewData["Title"] = "تاریخچه سفارش";
}

<h2>@ViewData["Title"]</h2>
<br />

@if(Model.Orders.Count>0)
{
    @foreach(var item in Model.Orders)
    {
        @Html.Partial("_IndividualOrderDetails",item)

    }

}
else
{
    <p>هیچ سفارشی از قبل وجود ندارد ...</p>

}
<br />
<div page-model="@Model.PagingInfo" page-action="OrderHistory" page-classes-enabled="true"
     page-class="btn border" page-class-normal="btn btn-default active"
     page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
<br />