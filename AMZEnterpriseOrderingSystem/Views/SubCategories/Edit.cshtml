@model AMZEnterpriseOrderingSystem.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@using AMZEnterpriseOrderingSystem.Extensions

@{
    ViewData["Title"] = "ویرایش دسته بندی";
}

<br />
<h2>ویرایش</h2>
<br />
@Html.Partial("_StatusMessage", Model.StatusMessage)
<hr />
<div class="row">
    <div class="col-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                </div>
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"></select>
                </div>
            </div>
          
            <br />
            <div class="form-group row">
                <div class="col-3"></div>
                <div class="col-5">
                    <input type="submit" value="ویرایش" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">بازگشت به لیست</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-4">
        @if (Model.SubCategoryList.Count() > 0)
        {
            <p> Existing Subcategories : </p>
            <ul class="list-group">
                @foreach (var item in Model.SubCategoryList)
                {
                    <li class="list-group-item">@item</li>

                }
            </ul>

        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


